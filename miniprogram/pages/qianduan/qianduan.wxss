page{
  width: 100%;
  height: 100%;
  overflow: hidden;
  
}
form{
  width: 100%;
  height: 100%;
  background: url('http://image.qianduan.ltd/back-img2.png');
  /* background:url(http://image.qianduan.ltd/wallhaven-839kvo_1125x2436.png); */
  background-size: cover;
  text-align: center;
}
.content{
  width: 80%;
  height: 40px;
  border-radius: 20px;
  border: 1px solid #267CC1;
  background-color: #267CC1;
  margin: auto;
  margin-top: 15px;
  text-align: left;
  padding-left: 20px;
  line-height: 40px;
  color: white;
}
text{
  display: inline-block;
  vertical-align: top;
  width: 80%;
}
image{
  margin-top: 5px;
}
.tips{
  margin-top: 10px;
  border: 1px solid #267CC1;
  color: #267CC1;
  width: 90%;
  font-size: 12px;
}
.example {
  display: block;
  width: 100%;
  height: 100rpx;
}
.marquee_box {
  width: 100%;
  position: relative;
}
.marquee_text {
  white-space: nowrap;
  position: absolute;
  top: 0;
}
.container {height: 40px;display: flex;flex-direction: column;justify-content: space-between;box-sizing: border-box;}
.scrolltxt{padding:0 20rpx;background:#267CC1; color: white;}
.marquee_box {position:relative;height:90rpx;display:block;overflow:hidden; color: white;} 
